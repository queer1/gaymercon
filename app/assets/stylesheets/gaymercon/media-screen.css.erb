/* Portrait tablet to landscape and desktop */
@media (min-width: 768px){
  img
  {
    border: none;
  }

  .no-margin-right
  {
    margin-right: 0;
  }

  body, html
  {
    height: 100%;
    width: 100%;
    font: 16px "Lucida Sans Unicode", "Lucida Grande", sans-serif;
  }

  h1, h2, h3, h4, nav a, button
  {
    font-family: 'Silkscreen', Silkscreen, helvetica, verdana, arial, sans-serif;
  }

  h1, h2, h3, h4
  {
    color: #000000;
  }

  h1
  {
    font-size: 60px;
  }

  h2
  {
    font-size: 48px;
  }

  h3
  {
    font-size: 36px;
  }

  h4
  {
    font-size: 18px;
  }

  input, textarea, select
  {
    padding: 10px;
    margin-bottom: 32px;
    margin-right: 10px;
    font: 16px "Lucida Sans Unicode", "Lucida Grande", sans-serif;
  }

  .standard-text-input
  {
    width: 307px;
  }

  .wide-textarea
  {
    width: 656px;
    height: 131px;
  }

  .small-text-input
  {
    width: 180px;
  }
  
  .tiny-text-input { width: 150px; font-size: 10pt; margin: 0; padding: 1px; display: inline; }
  .tiny-button { font-size: 10pt; margin: 0; padding: 0; display: inline; }

  button, .button
  {
    background-image:url(<%= asset_path "button-bg-left.png" %>), url(<%= asset_path "button-bg-right.png" %>);
    background-position: left top, right top;
    background-repeat: no-repeat;
    color: #ffffff;
    font-size: 18px;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
  }

  .button
  {
    padding: 8px 20px !important;
  }
  
  .button-small { padding: 5px; font-size: 14px; color: #fff; }
  .button-red:hover { color: #ccc; background: #C00000; }

  .button-red
  {
    background-color: #E10000;
    background-image: none;
  }

  #bg-left
  {
    position: fixed;
    top: 0;
    left: 0;
    width: 50%;
    height: 100%;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: -550px center;
    background-attachment: fixed;
    min-height: 100%;
    background-image: url(<%= asset_path "super-metroid.jpg" %>);
  }

  .index #bg-left
  {
    background-image: url(<%= asset_path "super-metroid.jpg" %>); 
  }

  .about #bg-left
  {
    background-image: url(<%= asset_path "s2-cpz-act2map.png" %>); 
  }

  .contact #bg-left
  {
    background-image: url(<%= asset_path "8-bit-sprites-all-in-one.jpg" %>);
  }

  .volunteer #bg-left
  {
    background-image: url(<%= asset_path "MarioKartDS-RainbowRoad.png" %>);
  }
  
  .admin #bg-left
  {
    background-image: url(<%= asset_path "super-metroid.jpg" %>); 
  }

  #bg-right
  {
    position: fixed;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 550px center;
    background-attachment: fixed;
    min-height: 100%;
    background-image: url(<%= asset_path "super-metroid.jpg" %>);
  }

  .index #bg-right
  {
    background-image: url(<%= asset_path "super-metroid.jpg" %>); 
  }

  .about #bg-right
  {
    background-image: url(<%= asset_path "s2-cpz-act2map.png" %>);
    background-position: 900px center; 
  }

  .contact #bg-right
  {
    background-image: url(<%= asset_path "8-bit-sprites-all-in-one.jpg" %>);
  }

  .volunteer #bg-right
  {
    background-image: url(<%= asset_path "MarioKartDS-RainbowRoad.png" %>);
  }
  
  .admin #bg-right
  {
    background-image: url(<%= asset_path "super-metroid.jpg" %>); 
  }

  #content
  {
    position: relative;
    width: 1083px;
    left: 50%;
    margin-left: -541px;
    background-color: #FFFFFF;
    float: left;
    min-height: 101%;
  }

  #content-wrapper
  {
    padding: 5px 16px 5px 16px;
  }

  header
  {
    margin: 20px 0 40px 0;
    float: left;
    width: 1024px;
  }

  #logo-image
  {
    margin-right: 55px;
    float: left;
  }

  header nav
  {
    float: left;
    margin-top: 12px;
    width: 645px;
  }

  header nav a
  {
    font-size: 18px;
  }
  
  .nav-links li{ float: left; margin-right: 20px; }

  header nav a:hover, header nav a.active-link, .subnav a:hover, .subnav .active-link
  {
    color: #00B7FF;
  }
  
  #info-links ul { position: absolute; }
  #info-links ul { width: 125px; text-align: center; border: 1px solid gray; background: white; padding: 1em; left: 295px;  }
  #info-links li { display: block; }

  .error, .notice, .info { font: 24px silkscreen, helvetica, sans-serif; padding: .5em; margin: .5em 0 .5em 0; clear: both; }

  .social-icons
  {
    float: right;
    margin-top: 12px;
  }

  .social-icon
  {
    width: 24px;
    height: 20px;
    float: left;
    margin-left: 10px;
    background-repeat: no-repeat;
    background-position: left top;
  }

  .social-icon.fb
  {
    background-image: url(<%= asset_path "social-icon-fb.png" %>);
  }

  .social-icon.twitter
  {
    background-image: url(<%= asset_path "social-icon-twitter.png" %>);
  }

  .feature-content
  {
    width: 1024px;
    height: 381px;
    float: left;
    background-image:url(<%= asset_path "gaymercon-feature-bg.png" %>);
    background-repeat: no-repeat;
    background-position: left top;
    margin-bottom: 40px;
  }

  .feature-content-copy
  {
    margin: 130px 47px;
    float: left;
  }

  .feature-content-copy h1, .feature-content-copy h3, .feature-content-copy .button
  {
    float: left;
    clear: both;
  }

  .feature-content-copy h1, .feature-content-copy h3
  {
    padding: 7px;
    background-color: #FFFFFF;
  }

  .feature-content-copy h3
  {
    margin-top: -15px;
  }

  .feature-content-copy .button
  {
    margin-top: 15px;
  }

  .body-content
  {
    width: 696px;
  }

  .body-content h1, .body-content h2, .body-content p span.paragraph-highlight
  {
    margin-bottom: 40px;
    display: block;
    clear: both;
  }

  .body-content h3
  {
    margin-bottom: 20px;
  }

  .body-content p span.paragraph-highlight
  {
    font-size: 24px;
    margin-bottom: 10px !important;
  }

  .body-content p
  {
    margin-bottom: 60px;
  }

  .body-content p a
  {
    color: #00B7FF;
  }

  .body-content form
  {
    margin: 20px 0 60px 0;
    float: left;
  }

  .body-content button
  {
    float: right;
    margin-right: 20px;
  }

  .grid-list li
  {
    width: 327px;
    margin-right: 20px;
    float: left;
  }

  .grid-list li p
  {
    margin-bottom: 40px;
  }

  .grid-list
  {
    margin-bottom: 20px;
    float: left;
  }

  .column
  {
    width: 327px;
    float: left;
    margin:0 20px 60px 0;
  }

  .column h4, .column ul, .column p, .column form
  {
    float: left;
    clear: both;
  }

  .column form
  {
    margin-top: 15px;
  }

  .column h4, .column iframe
  {
    margin-bottom: 20px;
  }

  .tweet .tweet_list li span.tweet_time a
  {
    font-family: 'Silkscreen', Silkscreen, helvetica, verdana, arial, sans-serif;
    color: #000000;
    font-weight: bold;
    display: block;
    width: 327px;
  }

  .tweet .tweet_list li span.tweet_text a
  {
    color: #00B7FF;
  }

  .tweet .tweet_list li
  {
    margin-bottom: 15px;
  }

  .tweet .tweet_list img
  {
    float: left;
    margin-right: 8px;
  }

  footer
  {
    width: 1024px;
    float: left;
    margin-top: 30px;
    margin-bottom: 20px;
  }

  footer ul
  {
    float: left;
  }

  footer p
  {
    float: right;
  }
  
  td { margin: 20px; padding: 20px; }
  .pagination { margin-top: 1em; }
  .pagination * { font: 24px 'Silkscreen', Silkscreen, helvetica, verdana, arial, sans-serif; }
  .pagination em, .pagination a { padding: 0 .5em 0 .5em; }
  .pagination em { font-style: normal; font-weight: normal; }
  
  .social-signin { clear: both; margin-bottom: 2em; }
}