@font-face {
  font-family: 'silkscreen';
  font-style: normal;
  font-weight: normal;
  src: url(<%= asset_path 'slkscr.ttf' %>);
}

a { font-family: helvetica, verdana, arial, sans-serif; color: #00B7FF; text-decoration: none; font-weight: normal; cursor: pointer; }
a:hover{ color: #00A6CC; }

nav a { color: #070707; }
nav a:hover { color: #00B7FF; }

strong { font-weight: 700; }
em { font-style: italic; }
blockquote { margin-left: 2em; border-left: 3px solid #00B7FF; padding-left: 2em; }
small { font-size: 85%; }
table { }
th { font-weight: bold; font-size: 115%; }
td { text-align: center; vertical-align: middle; }
.left { text-align: left; }
.right { text-align: right; }
p { margin-bottom: 1em; }

tr.highlight { background: #D9EDF7; }

h1 a, h2 a, h3 a, h4 a { font-family: 'Silkscreen', Silkscreen, helvetica, verdana, arial, sans-serif; }

.button { color: #fff; }
a.button:hover { color: #ccc; }
.button-blue { background-color: #00B7FF; }
a.button-blue:hover {  }

.button-red { background-color: #E10000; background-image: none; }
.button-red:hover { background: #C00000; }

.button-orange { background-color: #ffa02f; }
.button-orange:hover { background-color: #ee891e; }

.button-gray { color: #fff; background: #999; }
.button-gray:hover { color: #ccc; background: #666; }

.get-location { float: left; padding: 12px 12px 7px 12px; margin: 3px 12px 0 0; vertical-align: middle; border: 1px solid black; border-radius: 3px; -moz-border-radius: 3px; -webkit-border-radius: 3px; }

.clearfix { clear: both; }
.pull-left { float: left; }
.pull-right { float: right; }
.error { color: #b94a48; background: #f2dede; border: darken(#e2cece, 3%); }
.notice { color: #468847; background: #dff0d8; border: darken(#cfe0c8, 3%); }
.info { color: #3A87AD; background: #D9EDF7; border: #BCE8F1; }
.danger { color: red; }
.danger:hover { color: #c00;}
.beta { position: relative; top: -1.5em; left: -25px; z-index: 1000; font-family: 'Silkscreen', Silkscreen, helvetica, verdana, arial, sans-serif; color: red; font-size: 80%; width: 5px; display: inline-block; }


.nav-links img { padding-top: 2px; }
.new-messages { background: #dff0d8; border: darken(#cfe0c8, 3%); border-radius: 3px; -moz-border-radius: 3px; -webkit-border-radius: 3px; padding: 3px 5px 1px 7px; position: relative; top: -3px; }
.new-message-count { display: inline-block; position: relative; top: -3px; color: #468847; font-size: 85%; }

.new-notifications { background: #dff0d8; border: darken(#cfe0c8, 3%); border-radius: 3px; -moz-border-radius: 3px; -webkit-border-radius: 3px; padding: 3px 5px 1px 7px; position: relative; top: -3px; }
.new-notifications-count { display: inline-block; position: relative; top: -3px; color: #468847; font-size: 85%; }

.buttons { margin: 1em; }
html body .hidden { display: none; }