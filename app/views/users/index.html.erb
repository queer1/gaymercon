<h1>Here's some cool people for you!</h1>

<ul class="nav nav-tabs">
  <% if current_user.present? %>
    <li <%= @tab == "following" ? "class='active'" : '' %>><%= link_to "Following", users_path(tab: 'following') %></li>
    <li <%= @tab == "followers" ? "class='active'" : '' %>><%= link_to "Followers", users_path(tab: 'followers') %></li>
  <% end %>
  <li <%= @tab == "nearby" ? "class='active'" : '' %>><%= link_to "Nearby", users_path(tab: 'nearby') %></li>
  <% Nickname.networks.each do |n| %>
    <% name = n.humanize %>
    <% name = name.upcase unless name == "Steam" || name == "Other" %>
    <li <%= @network == n ? "class='active'" : '' %>><%= link_to name, users_path(network: n) %></li>
  <% end %>
  <li <%= @tab == "cool" ? "class='active'" : '' %>><%= link_to "All Users", users_path(tab: "cool") %></li>
</ul>

<div class='tab-content'>
  <div class="row">
    <div class="span12">
      <% if @users.empty? %>
        <h2>Sorry, no one here yet</h2>
      <% else %>
        <%= bootstrap_paginate @users %>
        <table class="table table-striped">
          <tr>
            <th>Pic</th>
            <th>Name</th>
            <th>Location</th>
            <% if current_user.present? %>
              <th>Games in Common</th>
            <% end %>
            <th>XP</th>
            <th>Actions</th>
          </tr>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to image_tag(user.avatar, width: 75, height: 75, style: "width: 75px;"), user_path(user) %></td>
              <td><%= link_to user.name, user_path(user) %></td>
              <td><%= user.place %></td>
              <% if current_user.present? %>
                <td><%= user.games_in_common(current_user).count %></td>
              <% end %>
              <td><%= strfnum(user.xp) %></td>
              <td>
                <% if current_user.present? %>
                  <% if current_user.following?(user) %>
                    <%= link_to "Unfollow", unfollow_path(user), :method => "post", :class => "btn" %>
                  <% else %>
                    <%= link_to "Follow", follow_path(user), :method => "post", :class => "btn btn-primary" %>
                  <% end %>
                  <%= link_to "View", user_path(user), :class => "btn" %>
                  <% if current_user.admin? %>
                    <%= link_to "Edit", halo_path("edit_user", user.id), :class => "btn" %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
        <%= bootstrap_paginate @users %>
      <% end %>
    </div>
  </div>
</div>
