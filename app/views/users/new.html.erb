<h2>Sign up</h2>

<div class="social-signin facebook-signin">
  <%= link_to "Sign up with <b>Facebook</b>".html_safe, omniauth_authorize_path(resource_name, "facebook"), :class => "btn-auth btn-facebook large" %><br />
</div>

<div class="social-signin twitter-signin">
  <%= link_to "Sign up with <b>Twitter</b>".html_safe, omniauth_authorize_path(resource_name, "twitter"), :class => "btn-auth btn-twitter large" %><br />
</div>

<h2>Or...</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br />
  <%= f.submit "Sign up", :class => "btn" %>
<% end %>

<%= render "devise/shared/links" %>
