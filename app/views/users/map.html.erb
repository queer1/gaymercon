<% content_for :javascripts do %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyAMetjKORD3esUMFNAs2PZCKzPVjG2AKgY&sensor=true" %>
  <%= javascript_include_tag "gmaps-spider.min.js" %>
  <%= javascript_include_tag "user_map" %>
<% end %>
<div class="row">
  <div class="span12">
    <h1>Overworld Map</h1>
    <%= form_tag '#', id: "address_form" do %>
      <%= label_tag "Go to:" %>
      <%= text_field_tag :address, '', placeholder: "Chicago, IL" %>
    <% end %>
    <div id="map_canvas" style="width: 100%; height: 600px;"
      <% if current_user.present? && current_user.location.set? %>
        data-lat="<%= current_user.coords.first %>"
        data-lng="<%= current_user.coords.last %>"
      <% end %>
    >
      &nbsp;
    </div>
  </div>
</div>


<div id="marker_template" class="hide container-fluid">
  <div class="row-fluid">
    <div class="span6">
      <a href=":link:"><img src=":avatar:" /></a>
    </div>
    <div class="span6">
      <h2><a href=":link:">:username:</a></h2>
      <p><a href="<%= page_path('xp') %>">Level :level: :user_class: </a></p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <p>:games:</p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <p>:networks:</p>
    </div>
  </div>
</div>