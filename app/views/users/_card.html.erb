<% user = card || @user %>
<div class="user-card">
  <%= link_to image_tag(user.avatar), user_path(user) %><br />
  <%= link_to user.name, user_path(user) %><br />
  <% if current_user && user != current_user %>
    <%= user.games_in_common(current_user).count %> Games in Common
  <% else %>
    Level <%= user.level %><br />
    <%= user.job.name %>
  <% end %>
</div>