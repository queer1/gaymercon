<% nickname = network || @network %>
<% other = nickname.network.present? && !Nickname.networks.include?(nickname.network) %>
<div class="nickname-form form-row">
  <%= select_tag 'nicknames[][network]', options_for_select(Nickname.networks.collect{|n| [n.capitalize, n]}, (other ? "other" : nickname.network)), :class => "span2" %>
  <%= text_field_tag 'nicknames[][network_other]', (other ? nickname.network : ''), :placeholder => "Origin", :class => "nickname-network-other span2 #{other ? '' : 'hide'}" %>
  <%= text_field_tag 'nicknames[][name]', nickname.name, :placeholder => "d3tHL0rD!!1!!!1!!11", :class => "span2" %>
  <%= link_to "&times;".html_safe, '#', :class => "btn nickname-remove", :style => "position: relative; top: -5px;" %>
</div>
