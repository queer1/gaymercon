<h1>Donators</h1>
<table class="table table-striped">
  <tr><th>Name</th><th>Email</th><th>Amount</th><th>Date</th><th>Details</th></tr>
  <% @donators.each do |donator| %>
    <tr>
      <td>
        <% if donator.user.present? %>
          <%= link_to halo_path(:aciton => "edit_user", :id => donator.user_id) %>
        <% else %>
          <%= donator.first_name %> <%= donator.last_name %>
        <% end %>
      </td>
      <td><%= mail_to donator.email %></td>
      <td><%= number_to_currency(donator.amount_in_dollars) %></td>
      <td><%= donator.created_at.strftime(DATE_FORMAT) %></td>
      <td><%= link_to "Details", admin_donator_path(donator) %></td>
    </tr>
  <% end %>
</table>
