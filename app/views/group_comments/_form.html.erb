<% comment = form || @comment %>
<% post = comment.post %>
<% group = comment.group %>
<% path = comment.persisted? ? group_post_comment_path(group, post, comment) : group_post_comments_path(group, post) %>

<%= form_for comment, :url => path do |f| %>
  <%= f.label :comment, "Reply" %>
  <%= f.text_area :content, :size => "50x5", :class => "bbcode" %>
  
  <% button = comment.persisted? ? "Edit" : "Post" %>
  <%= f.submit button, :class => "btn", :name => "" %>
<% end %>
