<% pan = panelist || @panelist %>
<% id = pan.try(:id) || "new_panelist" %>
<%= fields_for "panel[panelists][#{id}]", pan do |p| %>
  <div class="form-tight panelist-form">
    <h4>Panelist <a href='#' class="remove-panelist">&times;</a></h4>
    <%= p.label :name %><br />
    <%= p.text_field :name, :placeholder => "Handsome Jack" %>
    <br />
    <%= p.label :email %><br />
    <%= p.email_field :email, :placeholder => "jack@hyperion.com" %>
    <br />
    <%= p.label :phone, "Phone Number" %><br />
    <%= p.text_field :phone, :placeholder => "+1 (999) 555-5555 "%>
    <br />
    <%= p.label :address_1, "Address" %><br />
    <%= p.text_field :address_1, :placeholder => "Address Line 1" %><br />
    <%= p.text_field :address_2, :placeholder => "Address Line 2" %><br />
    <%= p.text_field :city, :placeholder => "City", :style => "width: 259px;" %>
    <%= p.text_field :province, :placeholder => "State / Province", :style => "width: 36px;" %><br />
    <%= p.text_field :country, :placeholder => "Country" %>
    <br />
    <label for="panelist_age">
      <%= p.check_box :age, {style: "float:left"}, "18+", nil %>
      I will be 18+ by Aug 2, 2013
    </label>
  </div>
<% end %>