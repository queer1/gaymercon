<% controls = current_user.present? && (@panel.user == current_user || current_user.admin?) %>
<div class="row-fluid">
  <div class="span8">
    <h2 class="panel-title">
      Panel: <%= @panel.title %> 
      <% if @panel.confirmed %>
        <span class="panel-confirmed">Confirmed! :)</span>
      <% end %>
    </h2>
  </div>
</div>

<div class="row-fluid">
  <%= render :partial => 'voting', :object => @panel %>
  <p class="panel-voting-question">Do you want to see this panel at GaymerCon? </p>
</div>

<div class="row-fluid">
  <div class="span4 offset1">
    <h4>Description:</h4>
    <p><%= @panel.kind %></p>
    <p><%= @panel.description.bbcode_to_html.html_safe %></p>
      <%= image_tag @panel.user.avatar, :class => "panel-byline-image" %>
      Created by <%= link_to (@panel.user.name || "Nameless User"), user_path(@panel.user) %>
      on <%= @panel.created_at.strftime("%b %-d, %Y" ) %>
      <% if controls %>
        | <%= link_to "Edit", edit_panel_path(@panel), :class => "danger" %>
        | <%= link_to "Delete", panel_path(@panel), :method => "delete", :confirm => "Are you sure?", :class => "danger" %>
      <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span4">
    <br /><br />
    <% if current_user.present? && current_user.admin? %>
        <% if !@panel.confirmed %>
          <%= button_to "Confirm!", halo_path("confirm_panel", @panel), :class => "btn btn-danger" %>
        <% else %>
          <%= button_to "de-confirm :(", halo_path("deconfirm_panel", @panel), :class => "btn btn-danger" %>
        <% end %>
    <% end %>
  </div>
</div>