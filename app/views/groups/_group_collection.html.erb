<table class="table table-striped">
  <tr>
    <th>Name</th>
    <% if local_assigns[:location] %>
      <th>Location</th>
    <% end %>
    
    <% if @section_name != "Forums" %>
      <th>Members</th>
    <% end %>
    
    <th>Posts</th>
    <th>Last Post </th>
    <th>Actions</th>
  </tr>
  <% groups ||= @groups %>
  <%= render :partial => 'groups/group', :collection => groups, locals: local_assigns %>
</table>
  
