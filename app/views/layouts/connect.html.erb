<!DOCTYPE html>
<html>
<head>
  <title>Gaymer Connect</title>
  <%= stylesheet_link_tag "connect", :media => "all" %>
  <% unless Gc2::Application.assets.find_asset("connect/#{params[:controller]}.css").nil? %>
    <%= stylesheet_link_tag "connect/#{params[:controller]}", :media => "all" %>
  <% end %>
  <%= yield :stylesheets %>
  
  <%= javascript_include_tag "connect" %>
  <% unless Gc2::Application.assets.find_asset("connect/#{params[:controller]}.js").nil? %>
    <%= javascript_iinclude_tag "connect/#{params[:controller]}" %>
  <% end %>
  <%= yield :javascripts %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/">Gaymer Connect</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Notify", page_path('notify') %></li>
            <% if current_user %>
              <li><%= link_to "Browse", users_path %></li>
              <li class="divider-vertical"></li>
              <li><%= link_to "My Account", edit_registration_path(current_user) %></li>
              <li><%= link_to "Log Out", logout_path %></li>
            <% else %>
              <li class="divider-vertical"></li>
              <% unless Rails.env == "production" %><li><%= link_to "Sign Up", signup_path %></li><% end %>
              <li><%= link_to "Log In", login_path %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>
  
  <div class="container">
    <% if flash[:error] %>
      <div class="alert alert-error">
        <%= flash[:error] %>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="alert alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <%= yield %>
    
    <footer>
      <p>&copy; Gaymerconnect 2012 | <%= link_to "Credits", page_path('credits') %></p>
    </footer>
  </div>

</body>
</html>
